<div class="w-full flex flex-col items-center">
  <div class="max-w-3xl w-full mx-auto mt-8 h-[50vh] rounded-sm bg-gray-600 py-10">
    <h1 class="text-center font-bold text-4xl text-gray-100">Create Account</h1>
    
    <div class="w-3/4 mx-auto mt-4">
      <%= form_with url: registration_path, model: User.new do |f| %>
        <% if f.object.errors.any? %>
          <% f.object.errors.full_messages.each do |msg| %>
            <span class="w-full bg-red-500 text-red-50 text-xs">
              <%= msg %>
            </span>
          <% end %>
        <% end %>
        <div class="flex flex-col">
          <%= f.label :username, class: "text-gray-100" %>
          <%= f.text_field :username, class: "bg-gray-800 rounded-lg mt-2 text-indigo-50", autofocus: true %>
        </div>

        <div class="flex flex-col">
          <%= f.label :email, class: "text-gray-100" %>
          <%= f.email_field :email, class: "bg-gray-800 rounded-lg mt-2 text-indigo-50" %>
        </div>

        <div class="flex flex-col mt-4">
          <%= f.label :password, class: "text-gray-100" %>
          <%= f.password_field :password, class: "bg-gray-800 rounded-lg mt-2 text-indigo-50" %>
        </div>

        <div class="flex flex-col mt-4">
          <%= f.submit "Create Account", class: "bg-indigo-500 text-indigo-100 p-2 rounded-lg cursor-pointer" %>
        </div>
      <% end %>

      <div class="mt-4">
        <%= link_to "Sign in", auth_path, class: "text-lg text-gray-100" %>
      </div>
    </div>
  </div>
</div>
